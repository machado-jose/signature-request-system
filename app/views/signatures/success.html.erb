<div class="jumbotron text-center mb-0 height-total">
  <h1 class="display-3">Thank You!</h1>
  <% unless params[:solicitation_id].blank? && params[:signature_image_filename].blank? %>
    <p class="lead"><strong>Your signature was sent successfully</strong></p>
    <hr>
    <p class="lead">You can download the signature and the document...</p>
    <div class="row justify-content-center">
      <div class="col-6">
        <p class="lead">
          <%= link_to "Download the Signature", signature_image_download_path(solicitation_id: params[:solicitation_id], signature_image_filename: params[:signature_image_filename]), class:"btn btn-primary btn-lg" %>
        </p>
        <p class="lead">
          <%= link_to "Download the Document", document_download_signature_path(params[:solicitation_id], signature_image_filename: params[:signature_image_filename]), class:"btn btn-primary btn-lg" %>
        </p>
      </div>
    </div>
  <% else %>
    <p class="lead"><strong>Your justification was sent successfully</strong></p>
  <% end %>
</div>